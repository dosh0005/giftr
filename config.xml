<?xml version='1.0' encoding='utf-8'?>
    <widget id="ca.edumedia.dosh0005.giftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
        <name>GiftR</name>
        <description> Store gift ideas for friend birthday. </description>
        <author email="dosh0005@algonquinlive.com" href="http://cordova.io"> MADD Algonquin Team </author>
        <content src="index.html" />
        <plugin name="cordova-plugin-whitelist" spec="1" />
        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <platform name="android">
            <allow-intent href="market:*" />
            <!-- Splash Screen -->
            <splash src="res/screen/android/res-long-land-hdpi.png" density="land-hdpi" />
            <splash src="res/screen/android/res-long-land-ldpi.png" density="land-ldpi" />
            <splash src="res/screen/android/res-long-land-mdpi.png" density="land-mdpi" />
            <splash src="res/screen/android/res-long-land-xhdpi.png" density="land-xhdpi" />
            <splash src="res/screen/android/res-long-land-xxhdpi.png" density="land-xxhdpi" />
            <splash src="res/screen/android/res-long-land-xxxhdpi.png" density="land-xxxhdpi" />
            <splash src="res/screen/android/res-long-port-hdpi.png" density="port-hdpi" />
            <splash src="res/screen/android/res-long-port-ldpi.png" density="port-ldpi" />
            <splash src="res/screen/android/res-long-port-mdpi.png" density="port-mdpi" />
            <splash src="res/screen/android/res-long-port-xhdpi.png" density="port-xhdpi" />
            <splash src="res/screen/android/res-long-port-xxhdpi.png" density="port-xxhdpi" />
            <splash src="res/screen/android/res-long-port-xxxhdpi.png" density="port-xxxhdpi" />
            <!-- Icons -->
            <icon src="res/icon/android/ldpi.png" density="ldpi" />
            <icon src="res/icon/android/mdpi.png" density="mdpi" />
            <icon src="res/icon/android/hdpi.png" density="hdpi" />
            <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
            <icon src="res/icon/android/xxhdpi.png" density="xxhdpi" />
            <icon src="res/icon/android/xxxhdpi.png" density="xxxhdpi" /> </platform>
        <platform name="ios">
            <allow-intent href="itms:*" />
            <allow-intent href="itms-apps:*" /> </platform>
        <preference name="SplashScreenDelay" value="10000" />
        <preference name="FadeSplashScreenDuration" value="750" /> </widget>